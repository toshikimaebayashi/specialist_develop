<div class="sub">
  <div class="commonBox-container">
    <h2 class="contactTitle">会員登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
      <div class="contact-box">
        <span class ="itemName"><%= f.label :メールアドレス  %></span><br />
        <div class="text-wrap"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
      </div>
      <div class="contact-box">
        <span class ="itemName"><%= f.label :パスワード%>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %></span><br />
        <div class="text-wrap"><%= f.password_field :password, autocomplete: "new-password" %></div>
      </div>
      <div class="contact-box">
        <span class ="itemName"><%= f.label :確認用パスワード  %></span><br />
        <div class="text-wrap"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
      </div>
      <div class="contact-box">
        <span class ="itemName">
          <%= link_to("プライバシーポリシー", "/privacy") %>に同意して、会員登録する
        </span>
      </div>
      <div class="submit-wrap">
        <%= f.submit "新規会員登録（無料）" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>