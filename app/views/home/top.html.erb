<div class="top-page-wrapper">

<div class="container">
  <h3><i class="fas fa-sticky-note"></i> ユーザーノート</h3> 
  <%= link_to "今スグユーザーノートを書く", "/post/new", { :class => "btn btn-primary"} %>
  <div class="row mt10">
  <% @posts.each do |post| %>
    <div class="col-lg-4 col-md-6">
      <div class="row">
        <div class="col-3"> 
          <%= link_to "/user/#{post.user.id}" do %>
            <img loading="lazy" src="<%= post.user.iconimageurl %>">
          <% end %>
        </div>
        <div class="col-9">
          <div class="leader__indexlist__date">20.08.12 <%= post.user.name %></div>
          <div class="leader__indexlist__title">
            <%= link_to "#{post.title}", "/post/#{post.id}" %>
          </div>
           
        </div>
      </div>
    </div>
    <% end %>
  <div class="col-lg-12"> <a href="/usernotes" class="btn btn-primary btn-block">ユーザーノート一覧へ</a> </div>
</div>

</div>