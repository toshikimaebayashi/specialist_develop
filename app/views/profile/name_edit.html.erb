<div class="sub">
  <div class="commonBox-container">
    <h2 class="contactTitle">ユーザー名編集画面</h2>
    <%= form_tag("/profile/update/name", {:multipart => true }) do  %>
      <div class="contact-box">
        <span class="itemName">ユーザー名</span> 
        <div class="text-wrap"><textarea name="name" placeholder="<%= @user.name %>"></textarea></div>
      </div>
      <div class="submit-wrap">
        <input type="submit" value="保存"> 
      </div>
      <% end %>
  </div>
</div>